#!/bin/bash
if [[ "$TERM" == "screen" ]]; then
    vim "$@"
    exit $?
fi

vims=("/Applications/Neovim.app" $(which gvim) "/Applications/MacVim.app" "vim")

for p in "${vims[@]}"; do
    if [[ "$p" == *.app ]]; then
        if [[ -d "$p" ]]; then
            open -a "$p" "$@"
            exit $?
        fi
    else
        "$p" "$@"
        exit $?
    fi
done
