#!/bin/bash
if [[ "$TERM" == "screen" ]]; then
    vim "$@"
    exit $?
fi

vims=("mvim" "gvim" "nvim" "vim")

for p in "${vims[@]}"; do
    if [[ "$p" == *.app ]]; then
        if [[ -d "$p" ]]; then
            open -a "$p" "$@"
            exit $?
        fi
    else
        if which "$p" &> /dev/null; then
            "$p" --remote-tab-silent "$@"
            exit $?
        fi
    fi
done
